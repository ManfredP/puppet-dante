#Routes
<% scope.lookupvar('::dante::socks_routes').each do |r| -%>
<%= "route {" %>
<%= "  from: #{r["from"]} to: #{r["to"]} via: #{r["via"]}" %>
<%= "  proxyprotocol: #{r["proxyprotocol"]}" %>
<%= "}" %>
<% end -%>

#Client Rules
<% scope.lookupvar('::dante::client_rules').each do |r| -%>
<%= "client #{r["mode"]} {" %>
<%= "  from: #{r["from"]} to: #{r["to"]}" %>
<%= "  log: #{r["log"]}" %>
<%= "}" %>
<% end -%>

#Socks Rules
<% scope.lookupvar('::dante::socks_rules').each do |r| -%>
<%= "socks #{r["mode"]} {" %>
<%= "  from: #{r["from"]} to: #{r["to"]}" %>
<%= "  log: #{r["log"]}" %>
<%= "}" %>
<% end -%>
